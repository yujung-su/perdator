---
// import type { ImageMetadata } from 'astro';
// import { Image } from 'astro:assets';
import "@styles/background1.css";
interface Props {
   videoPath: string;
   t1: string;
   t2: string;
   t3: string;
   t4: string;
}
const { videoPath, t1, t2, t3, t4} = Astro.props;
// const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/*.{jpeg,jpg,png,gif}');
if (!videoPath) throw new Error(`"${videoPath}" does not exist in glob: "/predator/src/videos/*.{mp4}"`);
---
<div class="overflow-hidden rounded-xl shadow-2xl max-w-lg md:max-w-2xl mt-6 mb-8 bg-white 2xl:col-span-1">
  <div class="md:flex">
    <div class="md:shrink-0 flex justify-center">
      <!-- <Image src={images[imagePath]()} alt="ladvanced" class="size-[250px] object-cover" title="me"/> -->
       <video muted loop playsinline autoplay disableRemotePlayback class="size-[350px] object-cover" src={videoPath} type="video/mp4"></video>
    </div>
    <div class="p-8">
      <div class="text-l 2xl:text-2xl font-semibold text-(--color-mytext2) tracking-wide uppercase ">{t1}</div>
      <h1 class="text-(--color-mytext2) mt-1 block 2xl:text-xl"> 
        <!-- indent-8 indent-16-->
        {t2}
      </h1>
      <p class="mt-2 text-gray-500 2xl:text-xl">
        {t3}
      </p>
       <p class="mt-2 text-gray-500 2xl:text-xl">
        {t4}
      </p>
    </div>
  </div>
</div>