---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import "@styles/background1.css";
interface Props {
   imagePath: string;
   t1: string;
   t2: string;
   t3: string;
   t4: string;
}
const { imagePath, t1, t2, t3, t4} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/*.{jpeg,jpg,png,gif}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "/predator/src/images/*.{jpeg,jpg,png,gif}"`);
---
<div class=" max-w-lg overflow-hidden rounded-xl bg-white shadow-2xl md:max-w-2xl mt-8 mb-3">
  <div class="md:flex">
    <div class="md:shrink-0 flex justify-center">
      <Image src={images[imagePath]()} alt="ladvanced" class="size-[250px] object-cover" title="me"/>
    </div>
    <div class="p-8">
      <div class="text-l font-semibold text-(--color-mytext2) tracking-wide uppercase">{t1}</div>
      <h1 class=" text-(--color-mytext2) mt-1 block md:text-l"> 
        <!-- indent-8 indent-16-->
        {t2}
      </h1>
      <p class="mt-2 text-gray-500 md:text-l">
        {t3}
      </p>
       <p class="mt-2 text-gray-500 md:text-l">
        {t4}
      </p>
    </div>
  </div>
</div>