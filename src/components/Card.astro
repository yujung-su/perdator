  </div>
  <div class= "text-white bg-purple-500 rounded-lg p-1 m-2 text-center border-2 border-solid shadow-md shadow-neutral-50">
    <Image src={icon_css} alt="ladvanced" class="size-[40px]" title="css" />
    <Image src={Imageadv} alt="ladvanced" class="size-[40px]" title="advanced"/>
  </div>
  <div class= "text-white bg-purple-500 rounded-lg p-1 m-2 text-center border-2 border-solid shadow-md shadow-neutral-50">
    <Image src={icon_js} alt="ladvanced" class="size-[40px]" title="css" />
    <Image src={Imagebeg} alt="ladvanced" class="size-[40px]" title="beginner"/>
