---
// import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import Imageadv from '@assets2/fullhp.png';
import Imagemid from '@assets2/midhp.png';
import Imagebeg from '@assets2/lowhp.png';

import icon_html from '@assets2/html5.svg';
import icon_css from '@assets2/css.svg';
import icon_js from '@assets2/js.svg';
import icon_twcss from '@assets2/twcss.png';
