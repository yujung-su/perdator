---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Tennis Coaching";
import Whitebox from '@components/whitebox.astro';
import Textbox from '@components/Textbox.astro';
---

<BaseLayout pageTitle={pageTitle}>
	<Textbox t1={'網球教練'} t2={'I am a certified tennis coach in Taiwan. Tennis class 1v1 and group for recreational levels! We will play at the outdoor court near the gym in academia Sinica'}/>

	<Whitebox imagePath="/src/images/me-tennis2.png" t1={'網球C級教練，歡迎初學到進階的學員上課，男女老少皆可'} 
	t3={'個人班1v1教學: 600 NTD 每小時，團體班教學: 400 NTD每人每小時，最多4人同時上課。場地費另計。' }/>
	<Whitebox imagePath="/src/images/me-tennis.png" t1={'Tennis Coaching near Sinica'} 
	t3={'1v1 Pricing: 600 NTD / hr' } t4={'Group Pricing: 400 NTD / hr per student, maximum 4 students. (Court booking fee not included)' }/>
	<!-- <Whitebox imagePath="/src/images/me.png" t1={'歡迎專業教練臨時找我代課' }/> -->
	<div class="h-24 md:h-84"/>
</BaseLayout>