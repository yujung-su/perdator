---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Music & Sound Design";
import Whitebox from '@components/whitebox.astro';
import Textbox from '@components/Textbox.astro';
---

<BaseLayout pageTitle={pageTitle}>
	<Textbox t2={'I love doing sound design for games. Check out my Soundcloud and Youtube link below!'}/>
	<Whitebox imagePath="/src/images/me.png" t1={'我喜歡創作有重低音的音樂，我也喜換創作beats，歡迎音樂家或饒舌rapper與我合作。'}/>
	<Whitebox imagePath="/src/images/me.png" t1={'我也希望有製作遊戲音效的機會，因為我喜歡sound design，用合成器做奇怪的聲音。'}/>
</BaseLayout>